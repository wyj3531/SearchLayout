<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="3.8dp"/>
            <solid android:color="@color/bg_search_tag"/>
            <stroke android:color="@color/bg_search_tag_stroke" android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3.8dp"/>
            <solid android:color="@color/colorWhite"/>
            <stroke android:color="@color/colorD0" android:width="1dp"/>
        </shape>
    </item>

</selector>